<launch>

  <!-- these are the arguments you can pass this launch file, for example paused:=true -->
  <arg name="model" default="$(find arduinobot_description)/urdf/arduinobot.urdf.xacro"/>

  <include file="$(find arduinobot_description)/launch/gazebo.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <rosparam command="load" file="$(find arduinobot_description)/config/joints.yaml"  />

  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/arduinobot" args="joint_1_position_controller joint_2_position_controller joint_3_position_controller joint_4_position_controller joint_state_controller"/>

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
    respawn="false" output="screen">
    <remap from="/joint_states" to="/arduinobot/joint_states" />
  </node>
  
</launch>