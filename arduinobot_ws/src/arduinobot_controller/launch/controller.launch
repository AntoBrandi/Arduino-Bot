<launch>

    <group ns="arduinobot_controller">
        <!-- Launch the rosserial node that interface ROS with Arduino -->
        <node pkg="rosserial_python" type="serial_node.py" name= "serial_interface" respawn="true" output="screen">
            <param name="port" value="/dev/ttyACM0" />
        </node>

        <!-- Launch the controller_interface node that converts joint state messages in Arduino readable messages -->
        <node pkg="arduinobot_controller" type="trajectory_controller.py" name="trajectory_controller" respawn="true" output="screen"/>
        <node pkg="arduinobot_controller" type="gripper_controller.py" name="gripper_controller" respawn="true" output="screen"/>

        <node pkg="arduinobot_controller" type="dumb_converter.py" name="dumb_converter" respawn="true" output="screen"/>
    </group>

</launch>