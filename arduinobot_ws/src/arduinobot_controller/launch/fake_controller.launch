<launch>

  <rosparam command="load" file="$(find arduinobot_controller)/config/joints.yaml"  />

  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/arduinobot" args="joint_1_position_controller joint_2_position_controller joint_3_position_controller joint_4_position_controller joint_state_controller"/>

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
    respawn="false" output="screen">
    <remap from="/joint_states" to="/arduinobot/joint_states" />
  </node>
  
</launch>